<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none">

    <RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground">

        <ImageView
            android:id="@+id/pastel_view"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginStart="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_16dp"
            android:background="@drawable/myrect"
            android:elevation="@dimen/dimen_10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pastel"
            android:translationZ="@dimen/dimen_10dp" />

        <ImageView
            android:id="@+id/yaroa_view"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:layout_marginEnd="@dimen/dimen_8dp"
            android:layout_marginTop="@dimen/dimen_165dp"
            android:background="@drawable/myrect"
            android:elevation="@dimen/dimen_10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/yaroa"
            android:translationZ="@dimen/dimen_10dp" />

        <ImageView
            android:id="@+id/phone_icon_view"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_below="@+id/slogan_view"
            android:layout_marginTop="@dimen/dimen_25dp"
            android:paddingStart="@dimen/dimen_15dp"
            android:paddingLeft="@dimen/dimen_15dp"
            android:src="@drawable/phone_icon" />

        <ImageView
            android:id="@+id/web_icon_view"
            android:layout_width="@dimen/dimen_35dp"
            android:layout_height="@dimen/dimen_35dp"
            android:layout_below="@+id/phone_view"
            android:paddingStart="@dimen/dimen_12dp"
            android:paddingLeft="@dimen/dimen_12dp"
            android:src="@drawable/web_icon" />

        <ImageView
            android:id="@+id/ubication_icon_view"
            android:layout_width="@dimen/dimen_30dp"
            android:layout_height="@dimen/dimen_30dp"
            android:layout_below="@+id/web_view"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:paddingStart="@dimen/dimen_15dp"
            android:paddingLeft="@dimen/dimen_15dp"
            android:src="@drawable/ubication_icon" />


        <TextView
            android:id="@+id/delicioso_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/yaroa_view"
            android:layout_marginTop="@dimen/title_margin_top"
            android:paddingStart="@dimen/default_padding"
            android:paddingLeft="@dimen/default_padding"
            android:text="@string/delicioso"
            android:textColor="@color/colorTextTittle"
            android:textSize="@dimen/title_text_size"
            android:textStyle="bold"
            app:fontFamily="@font/bungee_shade" />


        <TextView
            android:id="@+id/slogan_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delicioso_view"
            android:paddingStart="@dimen/dimen_16dp"
            android:paddingLeft="@dimen/dimen_16dp"
            android:text="@string/slogan"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorText"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/phone_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/slogan_view"
            android:clickable="true"
            android:focusable="true"
            android:onClick="dialPhone"
            android:paddingStart="@dimen/dimen_45dp"
            android:paddingLeft="@dimen/dimen_45dp"
            android:paddingTop="@dimen/dimen_30dp"
            android:text="@string/phone_number"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorText"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/web_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone_view"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:autoLink="all"
            android:clickable="true"
            android:focusable="true"
            android:linksClickable="true"
            android:paddingStart="@dimen/dimen_45dp"
            android:paddingLeft="@dimen/dimen_45dp"
            android:text="@string/web_address"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorText"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/address_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/web_view"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="addressLocation"
            android:paddingStart="@dimen/dimen_45dp"
            android:paddingLeft="@dimen/dimen_45dp"
            android:text="@string/address"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorText"
            android:textStyle="italic" />

    </RelativeLayout>
</ScrollView>